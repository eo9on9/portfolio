{
  "name": "@repo/ui-common",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/components/index.d.ts",
      "default": "./dist/components/index.js"
    },
    "./styles.css": "./dist/index.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.build.json && tsc-alias && pnpm build-styles",
    "build:watch": "chokidar 'src/**/*' --ignore 'src/**/*.stories.tsx' --ignore 'src/**/*.test.tsx' -c 'pnpm build'",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-styles": "tailwindcss -i ./src/styles/index.css -o ./dist/index.css",
    "test": "vitest run",
    "test:watch": "vitest --passWithNoTests"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.548.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-docs": "^10.1.2",
    "@storybook/react-vite": "^10.1.2",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.1",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-storybook": "^10.1.2",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "storybook": "^10.1.2",
    "tailwindcss": "^4.1.16",
    "tsc-alias": "^1.8.16",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  }
}
